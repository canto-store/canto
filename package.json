{
  "name": "canto",
  "version": "1.0.0",
  "description": "Canto monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "modules/*"
  ],
  "scripts": {
    "dev": "bun run dev:server & bun run dev:web & bun run dev:dashboard",
    "dev:web": "cd apps/web && bun run dev",
    "dev:server": "cd apps/server && bun run dev",
    "dev:dashboard": "cd apps/dashboard && bun run dev"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
