# Domain Configuration
DOMAIN=yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Security
JWT_SECRET=your-super-secret-jwt-key-here

# SSL Configuration (optional - for custom certificates)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/private.key

# Let's Encrypt Email (for automatic certificate generation)
LETSENCRYPT_EMAIL=admin@yourdomain.com

# Application URLs (used by frontend apps)
VITE_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# Optional: Database credentials if using containerized database
POSTGRES_DB=myapp
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword

# Optional: Redis configuration if using containerized Redis
REDIS_PASSWORD=myredispassword